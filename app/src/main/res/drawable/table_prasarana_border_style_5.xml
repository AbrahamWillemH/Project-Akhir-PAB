<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item android:drawable="@android:color/white"/> <!-- Background color, adjust as needed -->

    <!-- Top, left, and right borders -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#2FC1FF" />
            <solid android:color="#2FC1FF" />
        </shape>
    </item>

    <item android:bottom="0.5dp" android:right="0.5dp" android:left="0.5dp" android:top="0.5dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#2FC1FF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>