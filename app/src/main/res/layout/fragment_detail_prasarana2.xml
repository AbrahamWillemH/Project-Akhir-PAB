<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:padding="8dp">

    <TableLayout
        android:id="@+id/header_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow>
            <TextView
                android:id="@+id/tv_detail_prasarana_jenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/jenis_prasarana"
                style="@style/border.style_5"
                android:layout_span="4"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_span="4" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/img_detail_prasarana_photo"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_span="4" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tv_header_rencana_inv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Investasi Prasarana Selama Tiga Tahun Terakhir \n (Juta Rupiah)"
                style="@style/border.style_8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="5dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_detail_prasarana_inv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/investasi_tahap_3"
                style="@style/border.style_7"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_span="4"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tv_header_sumber_dana"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Rencana Investasi Prasarana dalam Tahun Mendatang"
                style="@style/border.style_8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="5dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_header_nilai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Nilai Investasi (Juta Rupiah)"
                style="@style/border.style_6"/>
            <TextView
                android:id="@+id/tv_header_sumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Sumber Dana"
                style="@style/border.style_6"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="3dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_detail_prasarana_rencana_inv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/rencana_investasi"
                style="@style/border.style_7"/>
            <TextView
                android:id="@+id/tv_detail_prasarana_sumber_dana"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/sumber_dana"
                style="@style/border.style_7"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
